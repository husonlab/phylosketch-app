<?import com.gluonhq.charm.glisten.control.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="rootPane" minHeight="-Infinity" minWidth="250.0" prefHeight="65.0"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.husonlab.phylosketch.views.labeleditor.LabelEditorController">
    <children>
        <TextField fx:id="textField" layoutY="48.5" minWidth="160.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.topAnchor="15.0"/>
        <GridPane layoutX="152.0" scaleX="0.5" scaleY="0.5" translateX="-25.0" translateY="10.0"
                  AnchorPane.rightAnchor="-65.0" AnchorPane.topAnchor="-40.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="leftButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                        text="Left" GridPane.rowIndex="1">
                    <graphic>
                        <Icon content="ARROW_BACK"/>
                    </graphic>
                </Button>
                <Button fx:id="upButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="44.0"
                        mnemonicParsing="false" text="Up" GridPane.columnIndex="1">
                    <graphic>
                        <Icon content="ARROW_UPWARD"/>
                    </graphic>
                </Button>
                <Button fx:id="doneButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="10.0"
                        layoutY="10.0" mnemonicParsing="false" text="Done" GridPane.columnIndex="1"
                        GridPane.rowIndex="1">
                    <graphic>
                        <Icon content="CHECK"/>
                    </graphic>
                </Button>
                <Button fx:id="rightButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="110.0"
                        layoutY="10.0" mnemonicParsing="false" text="Right" GridPane.columnIndex="2"
                        GridPane.rowIndex="1">
                    <graphic>
                        <Icon content="ARROW_FORWARD"/>
                    </graphic>
                </Button>
                <Button fx:id="downButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="210.0"
                        layoutY="10.0" mnemonicParsing="false" text="down" GridPane.columnIndex="1"
                        GridPane.rowIndex="2">
                    <graphic>
                        <Icon content="ARROW_DOWNWARD"/>
                    </graphic>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
