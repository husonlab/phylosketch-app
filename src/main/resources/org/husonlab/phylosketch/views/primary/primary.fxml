<?import com.gluonhq.charm.glisten.control.*?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<View fx:id="primary" prefHeight="600.0" prefWidth="600.0"
      stylesheets="@/org/husonlab/phylosketch/views/primary/primary.css" xmlns="http://javafx.com/javafx/18"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.husonlab.phylosketch.views.primary.PrimaryController">
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.1" orientation="VERTICAL">
            <items>
                <TextArea fx:id="newickTextArea" minHeight="0.0" prefHeight="60.0" prefRowCount="0" wrapText="true"/>
                <AnchorPane fx:id="anchorPane">
                    <children>
                        <ScrollPane fx:id="scrollPane" hbarPolicy="ALWAYS" pannable="true" vbarPolicy="ALWAYS"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <StackPane fx:id="stackPane" style="-fx-background-color: white;">
                                    <padding>
                                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                                    </padding>
                                </StackPane>
                            </content>
                        </ScrollPane>
                        <Label fx:id="modeLabel" text="Label" textFill="DARKGRAY" AnchorPane.leftAnchor="10.0"
                               AnchorPane.topAnchor="10.0"/>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
    <top>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <VBox fx:id="vBox" layoutX="4.099999904632568" layoutY="1.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <ToolBar prefHeight="40.0" prefWidth="200.0">
                            <items>
                                <MenuButton fx:id="modeMenuButton" contentDisplay="GRAPHIC_ONLY"
                                            mnemonicParsing="false">
                                    <items>
                                        <RadioMenuItem fx:id="panMenuItem" mnemonicParsing="false">
                                            <graphic>
                                                <Icon content="PAN_TOOL"/>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="moveMenuItem" mnemonicParsing="false">
                                            <graphic>
                                                <Icon content="SWAP_VERT"/>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="editLabelMenuItem" mnemonicParsing="false">
                                            <graphic>
                                                <Icon content="LABEL_OUTLINE"/>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="editMenuItem" mnemonicParsing="false">
                                            <graphic>
                                                <Icon content="EDIT"/>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="eraseMenuItem" mnemonicParsing="false">
                                            <graphic>
                                                <Icon content="BACKSPACE"/>
                                            </graphic>
                                        </RadioMenuItem>
                                    </items>
                                    <graphic>
                                        <Icon content="HELP_OUTLINE"/>
                                    </graphic>
                                </MenuButton>
                                <MenuButton fx:id="styleMenuButton" mnemonicParsing="false">
                                    <graphic>
                                        <Icon content="STYLE"/>
                                    </graphic>
                                    <items>
                                        <Menu fx:id="edgeShapeMenu" mnemonicParsing="false">
                                            <items>
                                                <RadioMenuItem fx:id="straightEdgesRadioMenuItem"
                                                               mnemonicParsing="false">
                                                    <graphic>
                                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                                   preserveRatio="true">
                                                            <image>
                                                                <Image url="@/org/husonlab/phylosketch/views/primary/Straight.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioMenuItem>
                                                <RadioMenuItem fx:id="rectangularEdgesRadioMenuItem"
                                                               mnemonicParsing="false">
                                                    <graphic>
                                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                                   preserveRatio="true">
                                                            <image>
                                                                <Image url="@/org/husonlab/phylosketch/views/primary/Rectangular.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioMenuItem>
                                                <RadioMenuItem fx:id="roundEdgesRadioMenuItem" mnemonicParsing="false">
                                                    <graphic>
                                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                                   preserveRatio="true">
                                                            <image>
                                                                <Image url="@/org/husonlab/phylosketch/views/primary/Round.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioMenuItem>
                                            </items>
                                            <graphic>
                                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@/org/husonlab/phylosketch/views/primary/Straight.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>

                                        </Menu>
                                        <Menu fx:id="arrowMenu" mnemonicParsing="false">
                                            <items>
                                                <RadioMenuItem fx:id="arrowNoneRadioMenuItem" mnemonicParsing="false">
                                                    <graphic>
                                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                                   preserveRatio="true">
                                                            <image>
                                                                <Image url="@/org/husonlab/phylosketch/views/primary/ArrowNone.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioMenuItem>
                                                <RadioMenuItem fx:id="arrowRightRadioMenuItem" mnemonicParsing="false">
                                                    <graphic>
                                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                                   preserveRatio="true">
                                                            <image>
                                                                <Image url="@/org/husonlab/phylosketch/views/primary/ArrowRight.png"/>
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioMenuItem>
                                            </items>
                                            <graphic>
                                                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                                           preserveRatio="true">
                                                    <image>
                                                        <Image url="@/org/husonlab/phylosketch/views/primary/ArrowNone.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Menu>
                                        <Menu mnemonicParsing="false">
                                            <items>
                                                <MenuItem mnemonicParsing="false">
                                                    <graphic>
                                                        <ColorPicker fx:id="fontColorPicker"/>
                                                    </graphic>
                                                </MenuItem>
                                            </items>
                                            <graphic>
                                                <Icon content="FORMAT_COLOR_TEXT"/>
                                            </graphic>
                                        </Menu>
                                        <Menu mnemonicParsing="false">
                                            <items>
                                                <MenuItem mnemonicParsing="false">
                                                    <graphic>
                                                        <ColorPicker fx:id="lineColorPicker"/>
                                                    </graphic>
                                                </MenuItem>
                                            </items>
                                            <graphic>
                                                <Icon content="BORDER_COLOR"/>
                                            </graphic>
                                        </Menu>
                                        <Menu mnemonicParsing="false">
                                            <items>
                                                <MenuItem mnemonicParsing="false">
                                                    <graphic>
                                                        <Slider fx:id="widthSlider" majorTickUnit="5.0" max="25.0"
                                                                minorTickCount="4" showTickLabels="true"
                                                                showTickMarks="true"/>
                                                    </graphic>
                                                </MenuItem>
                                            </items>
                                            <graphic>
                                                <Icon content="SHORT_TEXT"/>
                                            </graphic>
                                        </Menu>
                                        <Menu mnemonicParsing="false">
                                            <items>
                                                <MenuItem mnemonicParsing="false">
                                                    <graphic>
                                                        <Slider fx:id="sizeSlider" majorTickUnit="5.0" max="25.0"
                                                                minorTickCount="4" showTickLabels="true"
                                                                showTickMarks="true" snapToTicks="true" value="1.0"/>
                                                    </graphic>
                                                </MenuItem>
                                            </items>
                                            <graphic>
                                                <Icon content="FILTER_NONE"/>
                                            </graphic>
                                        </Menu>
                                        <CheckMenuItem fx:id="showFontsCheckMenuItem" mnemonicParsing="false"
                                                       text="Show Fonts"/>
                                    </items>
                                </MenuButton>
                                <Button fx:id="undoButton" contentDisplay="GRAPHIC_ONLY" layoutX="150.0" layoutY="10.0"
                                        mnemonicParsing="false" text="Undo">
                                    <graphic>
                                        <Icon content="UNDO"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="redoButton" contentDisplay="GRAPHIC_ONLY" layoutX="196.0" layoutY="10.0"
                                        mnemonicParsing="false" text="Redo">
                                    <graphic>
                                        <Icon content="REDO"/>
                                    </graphic>
                                </Button>
                                <Separator orientation="VERTICAL"/>
                                <Button fx:id="resetButton" contentDisplay="GRAPHIC_ONLY" layoutX="196.0" layoutY="10.0"
                                        mnemonicParsing="false" text="Reset Zoom">
                                    <graphic>
                                        <Icon content="HOME"/>
                                    </graphic>
                                </Button>
                                <Separator layoutX="247.0" layoutY="10.0" orientation="VERTICAL"/>
                                <Button fx:id="increaseFontSizeButton" mnemonicParsing="false" text="A+"/>
                                <Button fx:id="decreaseFontSizeButton" layoutX="329.0" layoutY="10.0"
                                        mnemonicParsing="false" text="A-"/>

                            </items>
                        </ToolBar>
                        <ToolBar fx:id="fontToolBar">
                            <items>
                                <ComboBox fx:id="fontComboBox" prefWidth="150.0" promptText="Font"/>
                                <TextField fx:id="fontSizeTextField" prefColumnCount="4" promptText="Size"/>
                                <ToggleButton fx:id="boldToggleButton" mnemonicParsing="false" text="B"/>
                                <ToggleButton fx:id="italicToggleButton" layoutX="10.0" layoutY="10.0"
                                              mnemonicParsing="false" text="I"/>
                                <ToggleButton fx:id="underlineToggleButton" layoutX="404.0" layoutY="10.0"
                                              mnemonicParsing="false" text="U"/>
                                <Button fx:id="closeFontButton" contentDisplay="CENTER" minHeight="-Infinity"
                                        minWidth="-Infinity" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0"
                                        text="✖"/>
                            </items>
                        </ToolBar>
                        <TextField fx:id="infoTextField" alignment="CENTER" prefHeight="40.0" promptText="Info">
                            <font>
                                <Font size="12.0"/>
                            </font>
                            <padding>
                                <Insets left="5.0" right="50.0"/>
                            </padding>
                        </TextField>
                    </children>
                </VBox>
                <HBox layoutX="529.4000244140625" layoutY="4.900000095367432" AnchorPane.rightAnchor="8.0"
                      AnchorPane.topAnchor="2.0">
                    <children>
                        <ToggleButton fx:id="showNewickToggleButton" contentDisplay="CENTER" mnemonicParsing="false"
                                      prefHeight="41.0" style="-fx-font-weight: bold; -fx-font-size: 16;"
                                      text="(a,b);"/>
                    </children>
                </HBox>
                <Button fx:id="importButton" contentDisplay="GRAPHIC_ONLY" minHeight="0.0" mnemonicParsing="false"
                        text="Import" textFill="WHITE" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="46.0">
                    <graphic>
                        <Icon content="INPUT" minHeight="0.0"/>
                    </graphic>
                </Button>
            </children>
        </AnchorPane>
    </top>
</View>
